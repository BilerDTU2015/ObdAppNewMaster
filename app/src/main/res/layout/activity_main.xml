<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:background="@mipmap/vgb">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_bluetooth"
        android:src="@drawable/rsz_bluetoothcon"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/mySwitch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  Bluetooth"
        android:id="@+id/textView"
        android:textColor="#fffffcfe"
        android:layout_below="@+id/btn_bluetooth"
        android:layout_alignStart="@+id/btn_bluetooth" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_map"
        android:src="@drawable/rsz_map7con"
        android:layout_alignTop="@+id/btn_bluetooth"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  Map/Route"
        android:id="@+id/textView5"
        android:layout_below="@+id/btn_map"
        android:layout_alignStart="@+id/btn_map"
        android:textColor="#ffffffff" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_dashboard"
        android:src="@drawable/rsz_speed"
        android:layout_alignTop="@+id/btn_map"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dashboard"
        android:id="@+id/txt_data"
        android:layout_below="@+id/btn_dashboard"
        android:layout_alignStart="@+id/btn_dashboard"
        android:textColor="#ffffffff" />

    <Switch
        android:layout_width="113dp"
        android:layout_height="100dp"
        android:maxHeight="200dp"
        android:switchMinWidth="100dp"
        android:minWidth="100dp"
        android:id="@+id/mySwitch"
        android:layout_above="@+id/btn_bluetooth"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="59dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SpeedRecording"
        android:id="@+id/switchStatus"
        android:textColor="#fff8f4ff"
        android:layout_above="@+id/mySwitch"
        android:layout_alignParentStart="true" />


</RelativeLayout>
